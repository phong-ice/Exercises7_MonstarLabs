<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dimen_24dp">

    <TextView
        android:id="@+id/tv_stt_audio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="01"
        android:textColor="@color/white"
        android:layout_marginLeft="@dimen/dimen_24dp"
        app:layout_constraintTop_toTopOf="parent"
        android:fontFamily="@font/roboto_regular"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/img_radius_audio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_10dp"
        app:cardCornerRadius="@dimen/dimen_10dp"
        app:layout_constraintLeft_toRightOf="@id/tv_stt_audio"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/img_item_audio"
            android:layout_width="@dimen/dimen_50dp"
            android:layout_height="@dimen/dimen_50dp"
            android:scaleType="centerCrop"
            android:src="@drawable/avatar_item" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tv_name_audio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_24dp"
        android:alpha="1"
        android:fontFamily="@font/roboto_medium"
        android:lines="1"
        android:text="@string/name_song_test"
        android:textColor="@color/white"
        android:textSize="@dimen/dimen_18sp"
        app:layout_constraintBottom_toTopOf="@id/tv_artist_audio"
        app:layout_constraintLeft_toRightOf="@id/img_radius_audio"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_artist_audio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_24dp"
        android:alpha="1"
        android:fontFamily="@font/roboto_light"
        android:lines="1"
        android:text="@string/artist_song_test"
        android:layout_marginBottom="@dimen/dimen_10dp"
        android:textColor="@color/white"
        android:textSize="@dimen/dimen_10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/img_radius_audio"
        app:layout_constraintTop_toBottomOf="@id/tv_name_audio" />

</androidx.constraintlayout.widget.ConstraintLayout>