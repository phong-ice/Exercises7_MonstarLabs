<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#000000"
    tools:context=".fragment.PlayAudioFragment">

    <ImageView
        android:id="@+id/btn_back"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="@dimen/dimen_24dp"
        android:layout_marginLeft="@dimen/dimen_16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/btn_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_more_horiz_24"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/dimen_24dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="@dimen/dimen_16dp"/>

    <TextView
        android:id="@+id/tv_name_audio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:text="Khac viet"
        android:layout_marginHorizontal="@dimen/dimen_16dp"
        app:layout_constraintRight_toLeftOf="@id/btn_more"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/dimen_24dp"
        app:layout_constraintLeft_toRightOf="@id/btn_back"
        android:fontFamily="@font/roboto_bold"
        android:textSize="@dimen/dimen_20dp"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_avatar"
        android:layout_width="@dimen/dimen_400dp"
        android:layout_height="@dimen/dimen_400dp"
        android:layout_marginTop="@dimen/dimen_40dp"
        android:background="@drawable/bgr_circle"
        android:backgroundTint="#1A757575"
        android:padding="@dimen/dimen_20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_name_audio">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bgr_circle"
            android:backgroundTint="#1A757575"
            android:padding="@dimen/dimen_20dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bgr_circle"
                android:backgroundTint="#1A757575">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:cardCornerRadius="999dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/avatar_item" />

                </androidx.cardview.widget.CardView>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageButton
        android:id="@+id/btn_play"
        android:layout_width="@dimen/dimen_60dp"
        android:layout_height="@dimen/dimen_60dp"
        android:background="@drawable/bgr_circle"
        android:backgroundTint="#1a3673"
        android:src="@drawable/ic_baseline_pause_24"
        app:layout_constraintBottom_toBottomOf="@id/layout_avatar"
        app:layout_constraintLeft_toLeftOf="@id/layout_avatar"
        app:layout_constraintRight_toRightOf="@id/layout_avatar"/>


    <ImageView
        android:id="@+id/btn_shuffle"
        app:layout_constraintTop_toTopOf="@id/layout_avatar"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="@dimen/dimen_16dp"
        android:layout_marginTop="@dimen/dimen_380dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_shuffle_24"/>

    <ImageView
        android:id="@+id/btn_repeat"
        app:layout_constraintTop_toTopOf="@id/layout_avatar"
        android:layout_marginTop="@dimen/dimen_380dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="@dimen/dimen_16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_repeat_24"/>

    <ImageView
        android:id="@+id/btn_previous"
        android:layout_width="@dimen/dimen_40dp"
        android:layout_height="@dimen/dimen_40dp"
        android:layout_marginTop="@dimen/dimen_24dp"
        android:src="@drawable/ic_baseline_fast_rewind_24"
        app:layout_constraintTop_toBottomOf="@id/btn_shuffle"
        app:layout_constraintRight_toLeftOf="@id/btn_next"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <ImageView
        android:id="@+id/btn_next"
        android:layout_width="@dimen/dimen_40dp"
        android:layout_marginTop="@dimen/dimen_24dp"
        android:layout_height="@dimen/dimen_40dp"
        android:src="@drawable/ic_baseline_fast_forward_24"
        app:layout_constraintLeft_toRightOf="@id/btn_previous"
        app:layout_constraintTop_toBottomOf="@id/btn_repeat"
        app:layout_constraintRight_toRightOf="parent"/>


    <TextView
        android:id="@+id/tv_current"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/btn_previous"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textColor="@color/white"
        android:fontFamily="@font/roboto_regular"
        android:layout_marginLeft="@dimen/dimen_16dp"
        android:layout_marginTop="@dimen/dimen_40dp"/>

    <SeekBar
        android:id="@+id/seek_bar"
        android:layout_width="0dp"
        android:layout_marginHorizontal="@dimen/dimen_16dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_40dp"
        app:layout_constraintRight_toLeftOf="@id/tv_duration"
        app:layout_constraintLeft_toRightOf="@id/tv_current"
        app:layout_constraintTop_toBottomOf="@id/btn_previous"/>

    <TextView
        android:id="@+id/tv_duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/btn_previous"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="@dimen/dimen_16dp"
        android:textColor="@color/white"
        android:fontFamily="@font/roboto_regular"
        android:layout_marginTop="@dimen/dimen_40dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>